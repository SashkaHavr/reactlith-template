{
  "name": "@reactlith-template/prettier-config",
  "private": true,
  "type": "module",
  "exports": {
    ".": "./prettier.config.js"
  },
  "scripts": {
    "clean": "bun exec \"rm -rf node_modules .turbo\"",
    "format": "prettier . --ignore-path ../../.gitignore --ignore-path ../../.prettierignore --write",
    "format:check": "prettier . --ignore-path ../../.gitignore --ignore-path ../../.prettierignore --check",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "^4.6.1",
    "@reactlith-template/typescript-config": "workspace:*",
    "@types/bun": "catalog:",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "prettier-plugin-sort-json": "^4.1.1",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "typescript": "catalog:"
  }
}
