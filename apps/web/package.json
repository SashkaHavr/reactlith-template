{
  "name": "@reactlith-template/web",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bunx --bun vite build",
    "clean": "bun exec \"rm -rf node_modules dist .tanstack .nitro .output .turbo\"",
    "component": "bunx --bun shadcn@latest add",
    "postcomponent": "bun run format",
    "dev": "bunx --bun vite dev",
    "format": "prettier . --ignore-path ../../.gitignore --ignore-path ../../.prettierignore --write",
    "format:check": "prettier . --ignore-path ../../.gitignore --ignore-path ../../.prettierignore --check",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "start": "bun exec \"NODE_ENV=production bun run .output/server/index.mjs\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@base-ui-components/react": "1.0.0-beta.4",
    "@reactlith-template/auth": "workspace:*",
    "@reactlith-template/intl": "workspace:*",
    "@reactlith-template/trpc": "workspace:*",
    "@tailwindcss/vite": "catalog:tailwind",
    "@tanstack/nitro-v2-vite-plugin": "catalog:vite",
    "@tanstack/react-query": "catalog:trpc",
    "@tanstack/react-router": "catalog:vite",
    "@tanstack/react-router-ssr-query": "catalog:vite",
    "@tanstack/react-start": "catalog:vite",
    "@tanstack/router-plugin": "catalog:vite",
    "@trpc/client": "catalog:trpc",
    "@trpc/tanstack-react-query": "catalog:trpc",
    "@vitejs/plugin-react": "catalog:vite",
    "babel-plugin-react-compiler": "latest",
    "better-auth": "catalog:",
    "class-variance-authority": "catalog:tailwind",
    "clsx": "catalog:tailwind",
    "lucide-react": "catalog:",
    "react": "catalog:react",
    "react-dom": "catalog:react",
    "superjson": "catalog:",
    "tailwind-merge": "catalog:tailwind",
    "tailwindcss": "catalog:tailwind",
    "tw-animate-css": "catalog:tailwind",
    "use-intl": "catalog:",
    "vite": "catalog:vite",
    "vite-tsconfig-paths": "catalog:vite",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@reactlith-template/eslint-config": "workspace:*",
    "@reactlith-template/prettier-config": "workspace:*",
    "@reactlith-template/typescript-config": "workspace:*",
    "@types/bun": "catalog:",
    "@types/react": "catalog:react",
    "@types/react-dom": "catalog:react",
    "typescript": "catalog:"
  }
}
