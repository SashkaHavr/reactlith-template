{
  "name": "Dev Container",
  "dockerComposeFile": "docker-compose.yaml",
  "service": "devcontainer",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  // vite dev/bun start, drizzle studio, opencode
  "forwardPorts": [3000, 4983, 4096],
  "postCreateCommand": "bun install && bun --filter '@reactlith-template/db' db:migrate && bun --filter '@reactlith-template/auth' generate-test-users",
  "remoteUser": "node",
  "customizations": {
    "vscode": {
      "extensions": [
        "lokalise.i18n-ally",
        "ms-azuretools.vscode-containers",
        "bradlc.vscode-tailwindcss",
        "oxc.oxc-vscode",
        "openai.chatgpt"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
  }
}
