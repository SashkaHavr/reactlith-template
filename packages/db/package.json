{
  "name": "@reactlith-template/db",
  "private": true,
  "type": "module",
  "imports": {
    "#*": "./src/*"
  },
  "exports": {
    ".": "./src/index.ts",
    "./schema": "./src/schema/index.ts",
    "./drizzle": "./src/drizzle.ts"
  },
  "scripts": {
    "build": "bun build --entrypoints ./src/migrate.ts --outdir ./dist --target bun",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run ./src/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:up": "docker run -d --name pg-reactlith-template -e POSTGRES_PASSWORD=mysecretpassword -v pgdata-reactlith-template:/var/lib/postgresql/data -p 5432:5432 postgres"
  },
  "dependencies": {
    "@reactlith-template/env": "workspace:*",
    "drizzle-kit": "catalog:drizzle",
    "drizzle-orm": "catalog:drizzle",
    "uuid": "catalog:"
  },
  "devDependencies": {
    "@reactlith-template/typescript-config": "workspace:*",
    "@types/bun": "catalog:",
    "typescript": "catalog:"
  }
}
