{
  "name": "@reactlith-template/db",
  "type": "module",
  "imports": {
    "#*": "./src/*"
  },
  "exports": {
    ".": "./src/index.ts",
    "./schema": "./src/schema/index.ts"
  },
  "scripts": {
    "clean": "git clean -xdf .turbo node_modules",
    "format": "prettier . --ignore-path ../../.gitignore --ignore-path ../../.prettierignore --write",
