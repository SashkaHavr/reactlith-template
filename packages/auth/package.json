{
  "name": "@reactlith-template/auth",
  "private": true,
  "type": "module",
  "imports": {
    "#*": "./src/*"
  },
  "exports": {
    ".": "./src/index.ts",
    "./permissions": "./src/permissions.ts"
  },
  "scripts": {
    "build-scripts": "bun build --entrypoints ./src/generate-test-users.ts --outdir ./dist --target bun",
    "clean": "bun exec \"rm -rf node_modules .turbo\"",
    "format": "prettier . --ignore-path ../../.gitignore --ignore-path ../../.prettierignore --write",
    "format:check": "prettier . --ignore-path ../../.gitignore --ignore-path ../../.prettierignore --check",
    "generate-db-schema": "bun exec \"DATABASE_URL=url bunx @better-auth/cli@latest generate --config src/index.ts --output ./generated/auth-schema.ts --yes\"",
    "generate-test-users": "bun run ./src/generate-test-users.ts",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "typecheck": "tsc --noEmit"
  },
  "prettier": "@reactlith-template/prettier-config",
  "dependencies": {
    "@reactlith-template/db": "workspace:*",
    "@reactlith-template/env": "workspace:*",
    "better-auth": "catalog:"
  },
  "devDependencies": {
    "@reactlith-template/eslint-config": "workspace:*",
    "@reactlith-template/prettier-config": "workspace:*",
    "@reactlith-template/typescript-config": "workspace:*",
    "@types/bun": "catalog:",
    "typescript": "catalog:"
  }
}
