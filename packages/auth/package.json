{
  "name": "@reactlith-template/auth",
  "private": true,
  "type": "module",
  "imports": {
    "#*": "./src/*"
  },
  "exports": {
    ".": "./src/index.ts",
    "./permissions": "./src/permissions.ts"
  },
  "scripts": {
    "build": "bun build --entrypoints ./src/generate-test-users.ts --outdir ./dist --target bun",
    "generate-db-schema": "bunx @better-auth/cli@latest generate --config generated/config.ts --output ./generated/auth-schema.ts --yes",
    "generate-test-users": "NODE_ENV=development bun run ./src/generate-test-users.ts"
  },
  "dependencies": {
    "@reactlith-template/db": "workspace:*",
    "@reactlith-template/env": "workspace:*",
    "@reactlith-template/utils": "workspace:*",
    "better-auth": "catalog:"
  },
  "devDependencies": {
    "@reactlith-template/typescript-config": "workspace:*",
    "@types/bun": "catalog:",
    "typescript": "catalog:"
  }
}
