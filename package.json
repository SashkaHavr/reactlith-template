{
  "name": "reactlith-template",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*",
      "tools/*"
    ],
    "catalog": {
      "@t3-oss/env-core": "~0.13.8",
      "@tanstack/react-form": "~1.23.4",
      "@types/bun": "1.3.3",
      "better-auth": "~1.4.3",
      "lucide-react": "0.555.0",
      "superjson": "~2.2.6",
      "typescript": "5.9.3",
      "use-intl": "~4.5.6",
      "uuid": "~13.0.0",
      "zod": "4.1.13"
    },
    "catalogs": {
      "drizzle": {
        "@types/pg": "~8.15.5",
        "drizzle-kit": "beta",
        "drizzle-orm": "beta",
        "pg": "~8.16.3"
      },
      "react": {
        "@types/react": "~19.2.7",
        "@types/react-dom": "~19.2.0",
        "react": "~19.2.0",
        "react-dom": "~19.2.0",
        "babel-plugin-react-compiler": "~1.0.0"
      },
      "tailwind": {
        "@tailwindcss/vite": "~4.1.13",
        "class-variance-authority": "0.7.1",
        "clsx": "~2.1.1",
        "tailwind-merge": "~3.4.0",
        "tailwindcss": "~4.1.13",
        "tw-animate-css": "~1.4.0"
      },
      "trpc": {
        "@tanstack/react-query": "~5.90.11",
        "@trpc/client": "~11.7.2",
        "@trpc/server": "~11.7.2",
        "@trpc/tanstack-react-query": "~11.7.2"
      },
      "vite": {
        "@tanstack/react-router": "~1.139.7",
        "@tanstack/react-router-ssr-query": "~1.139.7",
        "@tanstack/react-start": "~1.139.8",
        "@tanstack/router-plugin": "~1.139.7",
        "@vitejs/plugin-react": "~5.1.1",
        "vite": "~7.2.4",
        "vite-tsconfig-paths": "~5.1.4",
        "@tanstack/nitro-v2-vite-plugin": "~1.139.0"
      }
    }
  },
  "scripts": {
    "build": "turbo build build-scripts",
    "check": "turbo format:check lint typecheck",
    "clean": "turbo clean clean:root",
    "clean:root": "bun exec \"rm -rf node_modules .turbo\"",
    "compose": "docker compose -f docker-compose.yaml -f docker-compose.dev.yaml up --build -d",
    "deps": "bun update --interactive --recursive",
    "fix": "turbo format lint:fix typecheck",
    "format": "turbo format format:root",
    "format:check": "turbo format:check format:root:check",
    "format:root": "prettier . \"!./apps/**\" \"!./packages/**\" \"!./tools/**\" --write",
    "format:root:check": "prettier . \"!./apps/**\" \"!./packages/**\" \"!./tools/**\" --check",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "start": "turbo start",
    "typecheck": "turbo typecheck"
  },
  "prettier": "@reactlith-template/prettier-config",
  "dependencies": {
    "turbo": "2.6.1"
  },
  "devDependencies": {
    "@reactlith-template/prettier-config": "workspace:*"
  },
  "packageManager": "bun@1.3.3"
}
